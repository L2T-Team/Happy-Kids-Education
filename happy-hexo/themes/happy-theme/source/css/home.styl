
/* ======== HEADER ========  */
.header {
  background-image: url("./picture/012.png");
  height: 29rem;
  background-position: center;
  background-repeat: no-repeat;
  background-size: cover;
}

/* ======== BODY ========  */
.body {
  background-color: gray;
}

/* ======== COURSES ========  */
.courses {
  display: flex;
  justify-content: space-between;

  position: relative;
  top: -2rem;
  width: 80%;
  max-width: 1280px;
  margin: 0 auto 10rem;
  gap: 1rem;
}

.courses_item {
  background-color: #fff;
  width: 20rem;
  padding-bottom: 2rem;

  border-radius: 10px;
  overflow: hidden;

  cursor: pointer;
  transition: all 0.2s ease-in-out;
}

.courses_item:hover {
  transform: scale(1.07);
  border: solid 2px #61b9f5;
}

.courses_item:active {
  transform: scale(1);
  border: solid 2px #61b9f5;
}

.courses_item img {
  width: 100%;
}

.courses_item h2 {
  color: #61b9f5;
  text-align: center;
  margin-bottom: 1rem;
}

.courses_item p {
  color: #b8b8b8;
  font-size: 0.9rem;
  margin-bottom: 0.7rem;
  padding: 0 1.5rem;
}

/* ======== ABOUT US ========  */
.aboutUs {
  width: 80%;
  max-width: 1280px;
  margin: 0 auto;
  display: flex;

  gap: 4rem;
}
