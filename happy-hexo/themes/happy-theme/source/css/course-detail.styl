/* ======== CONTAINER ========  */
.title {
  color: #5d5d5d;
  text-align: center;
  font-size: 38px;
  font-weight: 700;
  line-height: 1.2;
  letter-spacing: 0.38px;
  margin: 55px auto;
}

.main {
  gap: 22px;
  margin: 0 auto 2rem;
  position: relative;
  display: flex;
}

.content {
  padding: 30px 36px;
  border-radius: 5px;
  border: 1px solid #adadad;
  width: 85%;
}

.content p {
  margin-bottom: 1.5rem;
}

.content p img {
  width: 20px;
  margin-right: 0.7rem;
  margin-bottom: -0.3rem;
}

.info {
  position: sticky;
  top: 100px;
  height: fit-content;
  padding: 11px;
  border: 1px solid #adadad;
  border-radius: 5px;
  display: flex;
  flex-direction: column;
  background-color: #fff;
  width: 30%;
}

.cover {
  width: 100%;
  height: auto;
  object-fit: cover;
  /* background: #D9D9D9; */
}

.info-content {
  height: 0;
  flex: 1;
  padding: 7px;
  margin-top: 14px;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.price {
  color: #505050;
  font-size: 36px;
  font-weight: 700;
  line-height: 1.3;
}

.name {
  color: #505050;
  font-size: 24px;
  font-weight: 700;
  line-height: 1.3;
}

.teacher {
  color: #3bcae9;
  font-size: 16px;
  font-weight: 700;
  line-height: 1.3;
}

.desc {
  color: #989898;
  font-size: 16px;
  font-weight: 400;
  line-height: 1.3;
}

.time {
  color: #9b9b9b;
  font-size: 16px;
  line-height: 1.3;
}

.register {
  display: block;
  width: 100%;
  height: 66px;
  background: #ff7900;
  color: #fff;
  font-size: 24px;
  font-weight: 700;
  text-align: center;
  line-height: 66px;
  text-decoration: none;
}

.register:hover {
  color: #fff;
  text-decoration: none !important;
}

@media all and (max-width: 1080px) {
  .main {
    gap: 1rem;
  }
}

@media all and (max-width: 980px) {

  .main {
    flex-direction: column;
    justify-content: center;
  }

  .title {
    margin-top: 1rem;
  }

  .content {
    width: 100%;
    padding: 1rem;
  }

  .info {
    position: static;
    top: 100px;
    width: 100%;
    height: max-content;
    padding: 11px;
    border: 1px solid #adadad;
    border-radius: 5px;
    display: flex;
    flex-direction: column;
    background-color: #fff;
  }
}
