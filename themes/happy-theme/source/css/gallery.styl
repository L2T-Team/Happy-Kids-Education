.list {
    list-style: none;
    padding: 0;
    gap: 10px;
    display: flex;
    align-items: flex-start;
    min-height: 400px;
  }

  .column {
    gap: 10px;
    width: 25%;
    display: flex;
    flex-direction: column;
  }

  .cover {
    width: 100%;
    border-radius: 6px;
    cursor: pointer;
  }

  .modal-dialog {
    max-width: 800px;
  }

  .modal-content img {
    width: 100%;
  }