.advantages {
  text-align: center;
}

.advantages h1 {
  margin-bottom: 3rem;
  color: #282828;
}

.advantages h4 {
  font-size: var(--h6-font-size);
}

.advantages__items {
  display: flex;
  align-items: center;
  position: relative;

  width: 100%;
  flex-wrap: wrap;
  color: #282828;
}

.advantages__item {
  background-color: #fff;
  padding: 1rem 1.5rem 2rem;

  text-align: left;
}

.advantages__item i {
  color: #f29956;
  margin-bottom: 1rem;
}

.advantages__item p {
  margin-top: 1rem;
}